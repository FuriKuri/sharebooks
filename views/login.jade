extends layout

block content
  h1= title
  p Welcome to #{title}
  form(action='/login', method= 'post')
    fieldset
      label(for='username')
      input(id='username', type='text', name='username')
      br
      label(for='password')
      input(id='password', type='password', name='password')
      br
      input(type='submit', value='Submit')